type Query {
  usersCursorBased(first: Int = 10, after: String = null, last: Int = null, before: String = null): UserConnection!
  usersOffsetBased1(offset: Int = 0, limit: Int = 10): [User!]!
  usersOffsetBased2(offset: Int = 0, limit: Int = 10): UserPage!
}

type UserConnection @typePolicy(embeddedFields: "pageInfo, edges") {
  pageInfo: PageInfo!
  edges: [UserEdge!]!
}

type PageInfo {
  startCursor: String!
  endCursor: String!
}

type UserEdge {
  cursor: String!
  node: User!
}

type UserPage {
  users: [User!]!
}

type User @typePolicy(keyFields: "id") {
  id: ID!
  name: String!
  email: String!
  admin: Boolean
}
