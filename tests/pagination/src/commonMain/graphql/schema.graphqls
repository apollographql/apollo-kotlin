type Query {
  users(after: String = null, first: Int! = 10): UserConnection!
}

type UserConnection @typePolicy(embeddedFields: "pageInfo, edges") {
  pageInfo: PageInfo!
  edges: [UserEdge!]!
}

type PageInfo {
  startCursor: String!
  endCursor: String!
}

type UserEdge {
  cursor: String!
  node: User!
}

type User @typePolicy(keyFields: "id") {
  id: ID!
  name: String!
  email: String!
  admin: Boolean
}
