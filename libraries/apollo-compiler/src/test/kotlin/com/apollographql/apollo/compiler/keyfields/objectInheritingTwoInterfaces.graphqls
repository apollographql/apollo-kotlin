extend schema @link(url: "https://specs.apollo.dev/kotlin_labs/v0.3/", import: ["@typePolicy"])

type Query {
  book: Book!
}

interface Node @typePolicy(keyFields: "id") {
  id: String!
}

interface Product @typePolicy(keyFields: "upc") {
  upc: String!
}

type Book implements Node & Product{
  id: String!
  upc: String!
  title: String!
}
