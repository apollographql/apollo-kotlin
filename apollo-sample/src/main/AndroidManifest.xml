<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.apollographql.apollo.sample">

  <uses-permission android:name="android.permission.INTERNET" />

  <application
    android:name="com.apollographql.apollo.sample.GitHuntApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:networkSecurityConfig="@xml/network_security_config"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name="com.apollographql.apollo.sample.feed.GitHuntFeedActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="com.apollographql.apollo.sample.detail.GitHuntEntryDetailActivity"></activity>
  </application>

</manifest>